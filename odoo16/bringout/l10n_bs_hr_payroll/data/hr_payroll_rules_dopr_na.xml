<odoo>

<record id="D_NA_SUB" model="hr.salary.rule.category">
    <field name="name">Doprinosi NA platu - analitika</field>
    <field name="code">D_NA_SUB</field>
</record>
<record id="D_NA" model="hr.salary.rule.category">
